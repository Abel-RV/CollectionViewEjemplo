<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewEjemplo.Pages.DetallePersonaPage"
             Title="Ficha de Persona">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            
            <Frame CornerRadius="100" 
                   HeightRequest="200" 
                   WidthRequest="200"
                   IsClippedToBounds="True"
                   HorizontalOptions="Center"
                   Padding="0"
                   BorderColor="Gray">
                <Image Source="{Binding PersonaFoto}" 
                       Aspect="AspectFill"
                       HeightRequest="200"
                       WidthRequest="200"/>
            </Frame>

            <Label Text="{Binding PersonaName}" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <Label Text="{Binding PersonaApellidos}" 
                   FontSize="22" 
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,0"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10"/>

            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, *" RowSpacing="15">
                
                <Label Grid.Row="0" Grid.Column="0" Text="Trabajo:" FontAttributes="Bold" />
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Trabajo}" Margin="10,0,0,0"/>

                <Label Grid.Row="1" Grid.Column="0" Text="DirecciÃ³n:" FontAttributes="Bold" />
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Direccion}" Margin="10,0,0,0"/>

                <Label Grid.Row="2" Grid.Column="0" Text="Nacimiento:" FontAttributes="Bold" />
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding FechaNacimiento}" Margin="10,0,0,0"/>
                
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>