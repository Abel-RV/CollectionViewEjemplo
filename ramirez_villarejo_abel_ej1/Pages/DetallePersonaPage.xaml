<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewEjemplo.Pages.DetallePersonaPage"
             Title="Ficha de Persona">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <Frame CornerRadius="100" 
                   HeightRequest="200" 
                   WidthRequest="200"
                   IsClippedToBounds="True"
                   HorizontalOptions="Center"
                   Padding="0"
                   BorderColor="Gray">
                <Image Source="{Binding PersonaFoto}" 
                       Aspect="AspectFill"
                       HeightRequest="200"
                       WidthRequest="200"/>
            </Frame>

            <Entry x:Name="txtNombre"
                   Text="{Binding PersonaName}" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   IsReadOnly="True" 
                   Placeholder="Nombre"/>
            
            <Entry x:Name="txtApellidos"
                   Text="{Binding PersonaApellidos}" 
                   FontSize="18" 
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   Margin="0,-10,0,0"
                   IsReadOnly="True"
                   Placeholder="Apellidos"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10"/>

            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, *" RowSpacing="15">
                
                <Label Grid.Row="0" Grid.Column="0" Text="Trabajo:" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Grid.Row="0" Grid.Column="1" 
                       x:Name="txtTrabajo"
                       Text="{Binding Trabajo}" 
                       IsReadOnly="True"
                       Margin="10,0,0,0"/>

                <Label Grid.Row="1" Grid.Column="0" Text="DirecciÃ³n:" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Grid.Row="1" Grid.Column="1" 
                       x:Name="txtDireccion"
                       Text="{Binding Direccion}" 
                       IsReadOnly="True"
                       Margin="10,0,0,0"/>

                <Label Grid.Row="2" Grid.Column="0" Text="Nacimiento:" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Grid.Row="2" Grid.Column="1" 
                       x:Name="txtFecha"
                       Text="{Binding FechaNacimiento}" 
                       IsReadOnly="True"
                       Margin="10,0,0,0"/>
            </Grid>

            <Button x:Name="btnEditar"
                    Text="Editar Datos"
                    Clicked="OnEditarClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>